<h1>New User</h1>

<div class="wrap-center">

<% if @user.errors.any? %>
	<div id="error_expl">
	<%= pluralize(@user.errors.count, "error") %>
	prohibited user from being created:
	<% @user.errors.full_messages.each do |msg| %>
		<ul>
			<li><%= msg %></li>
		</ul>
	<% end %>
	</div>
<% end %>

<%= form_for @user do |f| %>

	<br><%= f.text_field :username, placeholder: 'name' %>
	
	<br><%= f.text_field :display_name, placeholder: 'display name' %>
	
	<br><%= f.text_field :email, placeholder: 'email' %>

	<br><%= f.password_field :password, placeholder: 'password' %>

	<br><%= f.password_field :password_confirmation, placeholder: 'password confirmation' %>
	
	<br>
	<br><%= f.submit 'Sign Up' %>

	<br>
<% end %>

</div>




